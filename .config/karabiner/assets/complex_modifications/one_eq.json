{
  "title": "Change 1 and = to shift",
  "rules": [
    {
      "description": "Change 1 to left_shift if pressed with other keys",
      "manipulators": [
        {
          "from": {
            "key_code": "1",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "1"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change = to right_shift if pressed with other keys",
      "manipulators": [
        {
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "equal_sign"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
